{
    "name": "topbar",
    "position": "top",
    "id": "0",
    "layer": "bottom",
    "height": 28,
    "fixed-center": false,
    "margin": "4px 4px 0 4px",


    "modules-left": [ "group/left-elements" ],
    "modules-center": [  ],
    "modules-right": [ "group/right-elements" ],

    "include": [
        "~/.config/waybar/base-modules.json"
    ],



    "group/left-elements": {
        "orientation": "horizontal",
        "modules": [
            "group/stats",
            "custom/weather",
	    "hyprland/window"
        ]
    },

    "group/right-elements": {
        "orientation": "horizontal",
        "modules": [
            "group/tray-drawer",
            "hyprland/language",
            "group/volume",
            "group/connections",
            "group/power",
            "clock"
        ]
    },

    

    "group/tray-drawer": {
        "orientation": "horizontal",
        "modules": [
            "custom/tray-open",
            "tray"
        ],
        "drawer": {
            "transition-left-to-right": false,
            "click-to-reveal": false
        }
    },
    
    "group/stats": {
        "orientation": "horizontal",
        "modules": [
            "cpu",
            "memory",
            "temperature"            
        ]
    },

    "group/power": {
        "orientation": "horizontal",
        "modules": [
            "battery",
            "gamemode",
            "power-profiles-daemon",
            "idle_inhibitor"
        ],
        "drawer": {
            "transition-left-to-right": false,
            "click-to-reveal": false
        }
    },

    "group/volume": {
        "orientation": "horizontal",
        "modules": [
            "pulseaudio"
        ],
        "drawer": {
            "transition-left-to-right": false,
            "click-to-reveal": false
        }
    },

    "group/connections": {
        "orientation": "horizontal",
        "modules": [
            "network",
            "bluetooth"
        ]
    }
}

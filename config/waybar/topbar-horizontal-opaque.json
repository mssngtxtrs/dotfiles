{
    "name": "topbar-horizontal-opaque",
    "position": "top",
    "id": "0",
    "layer": "bottom",
    "height": 28,
    "margin": "4px 4px 0 4px",


    "modules-left": [ "group/left-elements" ],
    "modules-center": [ "group/center-elements" ],
    "modules-right": [ "group/right-elements" ],

    "include": [
        "~/.config/waybar/base-modules.json"
    ],



    "group/left-elements": {
        "orientation": "horizontal",
        "modules": [
            "group/stats",
            "custom/weather#horizontal",
            "hyprland/workspaces#horizontal"
        ]
    },

    "group/center-elements": {
        "orientation": "horizontal",
        "modules": [ "hyprland/window#horizontal" ]
    },

    "group/right-elements": {
        "orientation": "horizontal",
        "modules": [
            "group/tray-drawer",
            "hyprland/language#horizontal",
            "group/volume",
            "group/connections",
            "group/power",
            "clock#horizontal",
            "custom/notification#horizontal"
        ]
    },



    "group/tray-drawer": {
        "orientation": "horizontal",
        "modules": [
            "custom/tray-open#horizontal",
            "tray#horizontal"
        ],
        "drawer": {
            "transition-left-to-right": false,
            "click-to-reveal": false
        }
    },
    
    "group/stats": {
        "orientation": "horizontal",
        "modules": [
            "cpu#horizontal",
            "memory#horizontal",
            "temperature#horizontal"            
        ]
    },

    "group/power": {
        "orientation": "horizontal",
        "modules": [
            "battery#horizontal",
            "gamemode#horizontal",
            "power-profiles-daemon#horizontal",
            "idle_inhibitor#horizontal"
        ],
        "drawer": {
            "transition-left-to-right": false,
            "click-to-reveal": false
        }
    },

    "group/volume": {
        "orientation": "horizontal",
        "modules": [
            "pulseaudio#horizontal"
        ],
        "drawer": {
            "transition-left-to-right": false,
            "click-to-reveal": false
        }
    },

    "group/connections": {
        "orientation": "horizontal",
        "modules": [
            "network#horizontal",
            "bluetooth#horizontal"
        ]
    }
}

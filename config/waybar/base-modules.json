    "wlr/taskbar": {
        "format": "{icon}",
        "tooltip-format": "{title}\n{name}",
        "icon-theme": "Gruvbox-Plus-Dark",
        "icon-size": 56,
        "on-click": "minimize-raise",
        "on-click-middle": "close"
    },
    
    "custom/apps": {
        "format": "󰀻",
        "tooltip-format": "Приложения",
